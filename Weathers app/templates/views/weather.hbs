<!DOCTYPE html>
<html lang="en">

<head>
    {{>headers}}
</head>

<body>
    {{>navbar}}
    <div class="container-fluid main_header">
                <div class="col-md-10 col-12 mx-auto">
                    <div class="main_content">
                        <form class="temp_form">
                            <input type="text" id="cityName" placeholder="Enter the city name" autocomplete="off">
                            <input type="submit" value="search" id="submitBtn">
                        </form>
                    </div>

                    <div class="tempInfo">
                        <div class="top_layer">
                            <p id="day_now">Get</p>
                            <p id="time_now">Weather</p>
                        </div>
                        <div class="main_layer">
                            <p id="city_name">Get Output here</p>
                            <div class="middle_layer">
                                <p id="temp"><span id="temp_value">0</span> <sup>o</sup>C</p>
                                <p id="temp_text"></p>
                                <p id="temp_status"><i class="fa fa-cloud"></i></p>
                            </div>
                        </div>
                    <div>
                </div>
        </div>
    </div>
    {{>footer}}
    <script src="js/main.js"></script>
</body>

</html>